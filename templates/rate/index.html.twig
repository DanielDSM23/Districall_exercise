{% extends 'base.html.twig' %}

{% block title %}Noter post{% endblock %}

{% block body %}
  <div class="container mt-5">
    {% if form is not null %}
      <div class="card">
        <div class="card-header">
          <h1 class="mb-0">Notez ce post</h1>
        </div>
        <div class="card-body">
          {{ form(form) }}
        </div>
      </div>
    {% endif %}

    {% if error is not null %}
      <div class="alert alert-danger mt-4" role="alert">
        <h4 class="alert-heading">Erreur!</h4>
        <p>{{ error }}</p>
      </div>
    {% endif %}
  </div>
{% endblock %}
